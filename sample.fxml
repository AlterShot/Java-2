<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <VBox xmlns:fx="http://javafx.com/fxml"  alignment="center">
    <TextArea fx:id="mainTextArea" VBox.vgrow="ALWAYS" editable="false"/>
        <TextField fx:id="textField"  VBox.vgrow="ALWAYS" onAction = "#textFieldEnterPressed"/>
    <Button text="Enter" onAction="#btnOneClickAction"/>
    </VBox>

</GridPane>




